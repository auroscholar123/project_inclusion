<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ReferFragment">


    <RelativeLayout
        android:id="@+id/relative_back_certificate"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:visibility="gone"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:background="@color/back_background_color"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/signup_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_path_25"></ImageView>


    </RelativeLayout>


    <TextView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginStart="107dp"
        android:layout_marginTop="44dp"
        android:text="Refer"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/relative_back_certificate"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:id="@+id/img_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/background"
        android:layout_below="@+id/imageView2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_refer_icon"
            android:layout_centerInParent="true"></ImageView>



    </RelativeLayout>


    <TextView
        android:id="@+id/refer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="You haven't referred the app to anyone \n yet,tell other teacher about us"
        android:textSize="14sp">

    </TextView>


    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        app:cardUseCompatPadding="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/refer_text"
        android:elevation="7dp"
        app:cardCornerRadius="10dp"
        >

        <RelativeLayout
            android:id="@+id/signup_continue_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/button_background">

            <TextView
                android:id="@+id/crt_acnt_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/metropolis_light"
                android:text="@string/create_accnt"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>